{
  "name": "angular2-app",
  "version": "1.0.0",
  "scripts": {
    "start": "concurrently \"npm run html\" \"npm run css\" \"npm run tsc:w\" \"npm run lite\" ",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "lite": "lite-server",
    "typings": "typings",
    "postinstall": "typings install",
    "pretest": "npm run tsc",
    "test": "karma start karma.conf.js",
    "launch": "ts-node ./app/main.ts",
    "html": "find ./app -name '*.html'  -type f -exec cp {} ./dist \\;",
    "css": "find ./app -name '*.css'  -type f -exec cp {} ./dist \\;",
    "clean": "rm -rf dist"
  },
  "license": "ISC",
  "dependencies": {
    "angular2": "2.0.0-beta.13",
    "es6-promise": "^3.1.2",
    "es6-shim": "^0.35.0",
    "reflect-metadata": "0.1.2",
    "rxjs": "5.0.0-beta.2",
    "systemjs": "^0.19.24",
    "zone.js": "^0.6.6"

  },
  "devDependencies": {
    "@types/node": "^6.0.46",
    "concurrently": "^3.0.0",
    "lite-server": "^2.2.2",
    "jasmine-core": "^2.4.1",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^0.2.3",
    "karma-coverage": "^0.5.5",
    "karma-jasmine": "^0.3.8",
    "karma-remap-istanbul": "0.0.5",
    "typescript": "^2.0.6",
    "typings": "^0.7.9"
  }
}
